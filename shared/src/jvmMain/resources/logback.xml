<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="baaahs.controller.ControllerManager" level="DEBUG"/>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="io.mockk" level="INFO"/>
    <logger name="javax.jmdns.impl" level="ERROR" />
    <logger name="baaahs.controller.SacnManager" level="DEBUG" />
    <logger name="baaahs.controller.NanoleafManager" level="DEBUG" />
</configuration>
